@article{Mone:2001:EMBO-Rep:11713193,
abstract = {UV-induced DNA damage causes cells to repress RNA synthesis and to
initiate nucleotide excision repair (NER). NER and transcription
are intimately linked processes. Evidence has been presented that,
in addition to damaged genes, undamaged loci are transcriptionally
inhibited. We investigated whether RNA synthesis from undamaged genes
is affected by the presence of UV damage elsewhere in the same nucleus,
using a novel technique to UV irradiate only part of a nucleus. We
