@article{Tapias2004,
abstract = {In response to genotoxic attacks, cells activate sophisticated DNA repair pathways such as nucleotide excision repair (NER), which consists of damage removal via dual incision and DNA resynthesis. Using permanganate footprinting as well as highly purified factors, we show that NER is a dynamic process that takes place in a number of successive steps during which the DNA is remodeled around the lesion in response to the various NER factors. XPC/HR23B first recognizes the damaged structure and initiates the opening of the helix from position -3 to +6. TFIIH is then recruited and, in the presence of ATP, extends the opening from position -6 to +6; it also displaces XPC downstream from the lesion, thereby providing the topological structure for recruiting XPA and RPA, which will enlarge the opening. Once targeted by XPG, the damaged DNA is further melted from position -19 to +8. XPG and XPF/ERCC1 endonucleases then cut the damaged DNA at the limit of the opened structure that was previously "labeled" by the positioning of XPC/HR23B and TFIIH.},
author = {Tapias, Angels and Auriol, Jerome and Forget, Diane and Enzlin, Jacqueline H and Sch\"{a}rer, Orlando D and Coin, Frederic and Coulombe, Benoit and Egly, Jean-Marc},
