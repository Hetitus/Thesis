title = {{Dynamic interaction of \{TTDA\} with \{TFIIH\} is stabilized by nucleotide excision repair in living cells}},
url = {http://www.hubmed.org/display.cgi?uids=16669699},
volume = {4},
year = {2006}
}
@article{GigliaMari:2004:Nat-Genet:15220921,
abstract = {DNA repair-deficient trichothiodystrophy (TTD) results from mutations
