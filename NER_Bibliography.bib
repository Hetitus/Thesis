@article{deLaat:1998:Genes-Dev:9716411,
abstract = {The human single-stranded DNA-binding replication A protein (RPA)
is involved in various DNA-processing events. By comparing the affinity
of hRPA for artificial DNA hairpin structures with 3'- or 5'-protruding
