@article{Hey:2002:Biochemistry:12022861,
abstract = {The XPC-HR23B complex is a prime candidate for the initial damage
recognition step during global genome nucleotide excision repair.
A specific interaction between the XPC-HR23B complex and various
types of damaged DNA substrates has been demonstrated in recent work
