volume = {6},
year = {2007}
}
@article{Camenisch:2006:Nat-Struct-Mol-Biol:16491090,
abstract = {The function of human XPA protein, a key subunit of the nucleotide
excision repair pathway, has been examined with site-directed substitutions
in its putative DNA-binding cleft. After screening for repair activity
in a host-cell reactivation assay, we analyzed mutants by comparing
their affinities for different substrate architectures, including
DNA junctions that provide a surrogate for distorted reaction intermediates,
