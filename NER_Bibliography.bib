journal = {J Biol Chem},
month = apr,
number = {14},
pages = {7835--7842},
pmid = {9525876},
title = {{DNA structural elements required for ERCC1-XPF endonuclease activity}},
url = {http://www.hubmed.org/display.cgi?uids=9525876},
volume = {273},
year = {1998}
}
