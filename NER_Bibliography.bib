issn = {1932-6203},
journal = {PloS one},
keywords = {Algorithms,Cell Physiological Processes,Cell Physiological Processes: physiology,Models, Biological,Software,Systems Biology,Systems Biology: methods},
month = jan,
number = {9},
pages = {e74335},
pmid = {24098642},
title = {{Lessons learned from quantitative dynamical modeling in systems biology.}},
